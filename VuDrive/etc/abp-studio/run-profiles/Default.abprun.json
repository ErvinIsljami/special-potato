{
  "applications": {
    "VuDrive.Blazor": {
      "type": "dotnet-project",
      "launchUrl": "https://localhost:44325",
      "path": "../../../src/VuDrive.Blazor/VuDrive.Blazor.csproj",
      "kubernetesService": ".*-blazorserver$",
      "healthCheckEndpoint": "/health-status",
      "healthUiEndpoint": "/health-ui",
      "execution": {
        "order": 2
      }
}
  },
  "containers": {
    "serviceName": "VuDrive-Containers",
  },
  "tasks":{
    "Initialize Solution":{
    "type": "cli",
    "runOnSolutionOpen": true,
    "startCommand": "etc/scripts/initialize-solution.ps1",
    "workingDirectory": "../../../"
    },
    "Migrate Database":{
    "type": "cli",
    "runOnSolutionOpen": false,
    "startCommand": "etc/scripts/migrate-database.ps1",
    "workingDirectory": "../../../"
    }
  }
}