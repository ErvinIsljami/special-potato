@page "/displays"
@inject VuDrive.Displays.IDisplayAppService AppService
@inject NavigationManager Nav

<h3>Displays</h3>
<button class="btn btn-primary mb-3" @onclick="@Create">New Display</button>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size (in)</th>
            <th>Android</th>
            <th>RAM</th>
            <th>Memory</th>
            <th>CPU</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Items)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.SizeInInches</td>
                <td>@x.AndroidVersion</td>
                <td>@x.Ram</td>
                <td>@x.Memory</td>
                <td>@x.Cpu</td>
                <td>
                    <button class="btn btn-sm btn-secondary me-1" @onclick="@(() => Edit(x.Id))">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="@(() => Delete(x.Id))">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<VuDrive.Displays.DisplayDto> Items = new();

    protected override async Task OnInitializedAsync()
    {
        Items = (await AppService.GetListAsync(new())).Items.ToList();
    }

    void Create() => Nav.NavigateTo("/displays/edit");
    void Edit(Guid id) => Nav.NavigateTo($"/displays/edit/{id}");

    async Task Delete(Guid id)
    {
        await AppService.DeleteAsync(id);
        Items.RemoveAll(i => i.Id == id);
        StateHasChanged();
    }
}
