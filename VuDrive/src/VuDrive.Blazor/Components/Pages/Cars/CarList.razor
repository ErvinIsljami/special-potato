@page "/cars"
@using VuDrive.Cars
@attribute [Authorize]
@inject ICarAppService CarAppService
@inject NavigationManager Nav

<h3>Cars</h3>

<button class="btn btn-primary mb-3" @onclick="Create">New Car</button>

<table class="table">
    <thead>
        <tr>
            <th>Mark</th>
            <th>Model</th>
            <th>Specification</th>
            <th>Years Built</th>
            <th style="width:180px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Cars)
        {
            <tr>
                <td>@c.Mark</td>
                <td>@c.Model</td>
                <td>@c.SpecificationModel</td>
                <td>@string.Join(", ", c.YearsBuilt ?? new())</td>
                <td>
                    <button class="btn btn-sm btn-secondary me-2" @onclick="() => Edit(c.Id)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => Delete(c.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<CarDto> Cars = new();

    protected override async Task OnInitializedAsync()
    {
        Cars = (await CarAppService.GetListAsync(new())).Items.ToList();
    }

    void Create() => Nav.NavigateTo("/cars/edit");
    void Edit(Guid id) => Nav.NavigateTo($"/cars/edit/{id}");

    async Task Delete(Guid id)
    {
        await CarAppService.DeleteAsync(id);
        Cars.RemoveAll(x => x.Id == id);
        StateHasChanged();
    }
}
